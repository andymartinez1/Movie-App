@model TelevisionGenreViewModel

@{
    ViewData["Title"] = "Television Series";
}

<h1>Television Series</h1>

<p>
    <a buton class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="TelevisionShow" asp-action="Index" method="get">
    <p>

        <select asp-for="ShowGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <label>Title: <input type="text" asp-for="SearchString"/></label>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table table-striped table-dark table-hover">
    <thead>
    <tr>
        <th width="35%">
            @Html.DisplayNameFor(model => model.Shows![0].Title)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Shows![0].ReleaseDate)
        </th>
        <th width="20%">
            @Html.DisplayNameFor(model => model.Shows![0].Genre)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Shows![0].Price)
        </th>
        <th width="7%">
            @Html.DisplayNameFor(model => model.Shows![0].Rating)
        </th>
        <th width="18%">
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Shows!)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
